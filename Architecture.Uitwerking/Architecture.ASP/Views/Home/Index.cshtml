@model Architecture.ASP.Models.FormViewModel

<h2>Beschikbaarheid formulier</h2>

<p style="color:skyblue; font-style:italic">Testje: We hebben nu @ViewBag.items.Count vakantie(s) in de database.</p>

<p>Hier kun je beschikbaarheid en vakantiedagen aangeven.</p>

@Html.ValidationSummary()

@using (Html.BeginForm("PostForm", "Home", FormMethod.Post))
{
    <div class="form-group">

        @Html.LabelFor(m => m.Omschrijving)
        @Html.EditorFor(m => m.Omschrijving)

    </div>
    <div class="form-group">

        @Html.LabelFor(m => m.IsHoliday)
        @Html.EditorFor(m => m.IsHoliday)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Start)
        @Html.EditorFor(m => m.Start)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Einde)
        @Html.EditorFor(m => m.Einde)
        <span asp-validation-for="Einde" class="text-danger"></span>

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsRepeat)
        @Html.EditorFor(m => m.IsRepeat)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.AantalKeer)
        @Html.EditorFor(m => m.AantalKeer)
    </div>

    <input type="submit" value="Submit" class="btn btn-primary" />

}

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}